function showResults(sc){
  const zones={};
  ['EN','EG','CF'].forEach(k=>{
    const z=zone(sc[k]); zones[k]=z;
    renderScale(k,sc[k],z);
  });
  renderOverall(zones);
  renderRecs(zones);
  document.getElementById('quiz').style.display='none';
  document.getElementById('res').style.display='block';
  window.scrollTo({top:0,behavior:'smooth'});
}

function renderScale(key,score,z){
  const m=SCALE_META[key];
  const pct=Math.round(score/MAX_SCALE*100);
  const el=document.getElementById('r'+key);
  el.innerHTML=`
    <h3>${m.title}</h3><div class="rs">${m.sub}</div>
    <div class="sc-row">
      <span class="sc-num ${z}">${score}<span style="font-size:.6em;font-weight:400;color:var(--s400)">/${MAX_SCALE}</span></span>
      <span class="bdg ${z}">${ZONE_LABEL[z]}</span>
    </div>
    <div class="bar-t"><div class="bar-f ${z}" id="bf_${key}"></div></div>
    <div class="rdesc">${m.desc[z]}</div>`;
  requestAnimationFrame(()=>requestAnimationFrame(()=>{
    document.getElementById('bf_'+key).style.width=pct+'%';
  }));
}

function renderOverall(z){
  const vals=Object.values(z);
  const r=vals.filter(v=>v==='red').length;
  const y=vals.filter(v=>v==='yellow').length;
  const g=vals.filter(v=>v==='green').length;
  let icon,title,text,color;

  if(g===3){
    icon='üü¢';title='–†–µ—Å—É—Ä—Å–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ';color='var(--g700)';
    text='–í—Å–µ —Ç—Ä–∏ –ø–æ–∫–∞–∑–∞—Ç–µ–ª—è –≤ –∑–µ–ª—ë–Ω–æ–π –∑–æ–Ω–µ. –í—ã —Å–æ—Ö—Ä–∞–Ω—è–µ—Ç–µ —ç–Ω–µ—Ä–≥–∏—é, –≤–æ–≤–ª–µ—á—ë–Ω–Ω–æ—Å—Ç—å –∏ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å –≤ —Å–µ–±–µ. –ü—Ä–æ–¥–æ–ª–∂–∞–π—Ç–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞—Ç—å –±–∞–ª–∞–Ω—Å ‚Äî –∏–º–µ–Ω–Ω–æ —ç—Ç–æ –¥–µ–ª–∞–µ—Ç —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª—è —É—Å—Ç–æ–π—á–∏–≤—ã–º –≤ –¥–æ–ª–≥–æ—Å—Ä–æ—á–Ω–æ–π –ø–µ—Ä—Å–ø–µ–∫—Ç–∏–≤–µ.';
  }else if(r===0&&g>=2){
    icon='üü¢';title='–í —Ü–µ–ª–æ–º —Ö–æ—Ä–æ—à–∏–π —Ä–µ—Å—É—Ä—Å';color='var(--g700)';
    text='–ë–æ–ª—å—à–∏–Ω—Å—Ç–≤–æ –ø–æ–∫–∞–∑–∞—Ç–µ–ª–µ–π –≤ –Ω–æ—Ä–º–µ, –Ω–æ –æ–¥–Ω–∞ –∑–æ–Ω–∞ —Ç—Ä–µ–±—É–µ—Ç –≤–Ω–∏–º–∞–Ω–∏—è. –ü–æ—Å–º–æ—Ç—Ä–∏—Ç–µ, —á—Ç–æ –∏–º–µ–Ω–Ω–æ ¬´–ø—Ä–æ—Å–µ–ª–æ¬ª, –∏ –ø–æ–¥—É–º–∞–π—Ç–µ, –∫–∞–∫–∏–µ –Ω–µ–±–æ–ª—å—à–∏–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è –º–æ–≥—É—Ç –ø–æ–º–æ—á—å.';
  }else if(r===0){
    icon='üü°';title='–ï—Å—Ç—å –∑–æ–Ω—ã –¥–ª—è –≤–Ω–∏–º–∞–Ω–∏—è';color='var(--y700)';
    text='–ù–∏ –æ–¥–∏–Ω –ø–æ–∫–∞–∑–∞—Ç–µ–ª—å –Ω–µ –≤ –∫—Ä–∞—Å–Ω–æ–π –∑–æ–Ω–µ, –Ω–æ –Ω–∞–ø—Ä—è–∂–µ–Ω–∏–µ –æ—â—É—â–∞–µ—Ç—Å—è –ø–æ –Ω–µ—Å–∫–æ–ª—å–∫–∏–º –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è–º. –°–µ–π—á–∞—Å —Ö–æ—Ä–æ—à–∏–π –º–æ–º–µ–Ω—Ç, —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å –ø—Ä–æ—Ñ–∏–ª–∞–∫—Ç–∏–∫—É ‚Äî –ø–æ–∫–∞ —Å–∏—Ç—É–∞—Ü–∏—è –Ω–µ –ø–µ—Ä–µ—à–ª–∞ –≤ –≤—ã–≥–æ—Ä–∞–Ω–∏–µ.';
  }else if(r===1){
    icon='üü†';title='–ï—Å—Ç—å –∑–æ–Ω–∞ —Ä–∏—Å–∫–∞';color='var(--o600)';
    text='–û–¥–∏–Ω –∏–∑ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤ –≤ –∫—Ä–∞—Å–Ω–æ–π –∑–æ–Ω–µ ‚Äî —ç—Ç–æ —Å–µ—Ä—å—ë–∑–Ω—ã–π —Å–∏–≥–Ω–∞–ª. –†–µ–∫–æ–º–µ–Ω–¥—É–µ–º –≤–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –ø—Ä–æ—á–∏—Ç–∞—Ç—å —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –Ω–∏–∂–µ –∏, –≤–æ–∑–º–æ–∂–Ω–æ, –æ–±—Å—É–¥–∏—Ç—å —Å–∏—Ç—É–∞—Ü–∏—é —Å –∫–æ—É—á–µ–º, –Ω–∞—Å—Ç–∞–≤–Ω–∏–∫–æ–º –∏–ª–∏ HR.';
  }else if(r===2){
    icon='üî¥';title='–í—ã—Ä–∞–∂–µ–Ω–Ω—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ –≤—ã–≥–æ—Ä–∞–Ω–∏—è';color='var(--r600)';
    text='–î–≤–∞ –∏–∑ —Ç—Ä—ë—Ö –ø–æ–∫–∞–∑–∞—Ç–µ–ª–µ–π –≤ –∫—Ä–∞—Å–Ω–æ–π –∑–æ–Ω–µ. –≠—Ç–æ —É–∂–µ –Ω–µ ¬´–ø—Ä–æ—Å—Ç–æ —É—Å—Ç–∞–ª–æ—Å—Ç—å¬ª ‚Äî –≤–∞–º –Ω—É–∂–Ω–∞ –ø–æ–¥–¥–µ—Ä–∂–∫–∞. –ü–æ–≥–æ–≤–æ—Ä–∏—Ç–µ —Å —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª–µ–º –æ –Ω–∞–≥—Ä—É–∑–∫–µ, –æ–±—Ä–∞—Ç–∏—Ç–µ—Å—å –∫ –ø—Å–∏—Ö–æ–ª–æ–≥—É –∏–ª–∏ –≤–æ—Å–ø–æ–ª—å–∑—É–π—Ç–µ—Å—å –ø—Ä–æ–≥—Ä–∞–º–º–æ–π EAP, –µ—Å–ª–∏ –æ–Ω–∞ –µ—Å—Ç—å –≤ –∫–æ–º–ø–∞–Ω–∏–∏.';
  }else{
    icon='üö®';title='–í—ã—Å–æ–∫–∏–π —Ä–∏—Å–∫ –≤—ã–≥–æ—Ä–∞–Ω–∏—è';color='var(--r700)';
    text='–í—Å–µ —Ç—Ä–∏ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞ –≤ –∫—Ä–∞—Å–Ω–æ–π –∑–æ–Ω–µ. –í—ã –Ω–∞ –≥—Ä–∞–Ω–∏ (–∏–ª–∏ —É–∂–µ –≤ —Å–æ—Å—Ç–æ—è–Ω–∏–∏) –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω–æ–≥–æ –≤—ã–≥–æ—Ä–∞–Ω–∏—è. –≠—Ç–æ –Ω–µ —Å–ª–∞–±–æ—Å—Ç—å ‚Äî —ç—Ç–æ —Å–∏–≥–Ω–∞–ª, —á—Ç–æ —Å–∏—Å—Ç–µ–º–∞ –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–∞. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ–±—Ä–∞—Ç–∏—Ç–µ—Å—å –∑–∞ –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω–æ–π –ø–æ–º–æ—â—å—é –∏ –æ–±—Å—É–¥–∏—Ç–µ —Å —Ä—É–∫–æ–≤–æ–¥—Å—Ç–≤–æ–º –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å –ø–µ—Ä–µ—Ä–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –Ω–∞–≥—Ä—É–∑–∫–∏.';
  }

  document.getElementById('rOV').innerHTML=`
    <div class="oi">${icon}</div>
    <h3 style="color:${color}">${title}</h3><p>${text}</p>`;
}

/* =============================================================
   RECOMMENDATIONS
   ============================================================= */
function renderRecs(z){
  const box=document.getElementById('recBox');
  let h='';

  if(z.EN!=='green'){
    h+=rec('üí§ –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ —ç–Ω–µ—Ä–≥–∏–∏',[
      '–ü—Ä–æ–≤–µ–¥–∏—Ç–µ ¬´–∞—É–¥–∏—Ç –∫–∞–ª–µ–Ω–¥–∞—Ä—è¬ª ‚Äî –Ω–∞–π–¥–∏—Ç–µ –≤—Å—Ç—Ä–µ—á–∏, –∫–æ—Ç–æ—Ä—ã–µ –º–æ–∂–Ω–æ –æ—Ç–º–µ–Ω–∏—Ç—å –∏–ª–∏ —Å–æ–∫—Ä–∞—Ç–∏—Ç—å',
      '–î–µ–ª–µ–≥–∏—Ä—É–π—Ç–µ —Ö–æ—Ç—è –±—ã –æ–¥–Ω—É –∑–∞–¥–∞—á—É, –∫–æ—Ç–æ—Ä—É—é –≤—ã –ø—Ä–∏–≤—ã–∫–ª–∏ –¥–µ–ª–∞—Ç—å —Å–∞–º–∏',
      '–£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ ¬´—Å—Ç–æ–ø-–≤—Ä–µ–º—è¬ª: –ø–æ—Å–ª–µ –æ–ø—Ä–µ–¥–µ–ª—ë–Ω–Ω–æ–≥–æ —á–∞—Å–∞ ‚Äî –Ω–∏–∫–∞–∫–∏—Ö —Ä–∞–±–æ—á–∏—Ö —Å–æ–æ–±—â–µ–Ω–∏–π',
      '–í–≤–µ–¥–∏—Ç–µ 5-–º–∏–Ω—É—Ç–Ω—ã–µ –ø–∞—É–∑—ã –º–µ–∂–¥—É –≤—Å—Ç—Ä–µ—á–∞–º–∏: –≤—Å—Ç–∞—Ç—å, –ø—Ä–æ–π—Ç–∏—Å—å, –ø–æ–¥—ã—à–∞—Ç—å',
      '–ü—Ä–æ–≤–µ—Ä—å—Ç–µ –±–∞–∑—É: —Å–æ–Ω, –¥–≤–∏–∂–µ–Ω–∏–µ, –ø–∏—Ç–∞–Ω–∏–µ ‚Äî —á–∞—Å—Ç–æ –∏–º–µ–Ω–Ω–æ –∑–¥–µ—Å—å –∫—Ä–æ–µ—Ç—Å—è —É—Ç–µ—á–∫–∞ —ç–Ω–µ—Ä–≥–∏–∏'
    ]);
  }
  if(z.EG!=='green'){
    h+=rec('üéØ –í–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ –≤–æ–≤–ª–µ—á—ë–Ω–Ω–æ—Å—Ç–∏',[
      '–ó–∞–ø–∏—à–∏—Ç–µ 3 –≤–µ—â–∏, –∫–æ—Ç–æ—Ä—ã–µ –∫–æ–≥–¥–∞-—Ç–æ –ø—Ä–∏–≤–ª–µ–∫–ª–∏ –≤–∞—Å –≤ —ç—Ç—É —Ä–æ–ª—å. –ß—Ç–æ –∏–∑ —ç—Ç–æ–≥–æ –æ—Å—Ç–∞–ª–æ—Å—å?',
      '–ù–∞–π–¥–∏—Ç–µ –≤ —Ç–µ–∫—É—â–∏—Ö –∑–∞–¥–∞—á–∞—Ö —Ö–æ—Ç—è –±—ã –æ–¥–Ω—É, –∫–æ—Ç–æ—Ä–∞—è –≤–∞–º –ø–æ-–Ω–∞—Å—Ç–æ—è—â–µ–º—É –∏–Ω—Ç–µ—Ä–µ—Å–Ω–∞, –∏ —É–¥–µ–ª–∏—Ç–µ –µ–π –±–æ–ª—å—à–µ –≤—Ä–µ–º–µ–Ω–∏',
      '–û–±—Å—É–¥–∏—Ç–µ —Å —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª–µ–º –≤–∞—à–∏ –∫–∞—Ä—å–µ—Ä–Ω—ã–µ –æ–∂–∏–¥–∞–Ω–∏—è ‚Äî –≤–æ–∑–º–æ–∂–Ω–æ, –ø–æ—Ä–∞ –æ–±–Ω–æ–≤–∏—Ç—å —Ü–µ–ª–∏',
      '–ü–æ–ø—Ä–æ–±—É–π—Ç–µ ¬´–¥–∂–æ–±-–∫—Ä–∞—Ñ—Ç–∏–Ω–≥¬ª: –ø–µ—Ä–µ—Å—Ç—Ä–æ–π—Ç–µ —Ä–∞–±–æ—á–∏–π –ø—Ä–æ—Ü–µ—Å—Å —Ç–∞–∫, —á—Ç–æ–±—ã –æ–Ω –±–æ–ª—å—à–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–æ–≤–∞–ª –≤–∞—à–∏–º —Å–∏–ª—å–Ω—ã–º —Å—Ç–æ—Ä–æ–Ω–∞–º',
      '–ü–æ–≥–æ–≤–æ—Ä–∏—Ç–µ —Å –∫–æ–ª–ª–µ–≥–∞–º–∏-–º–µ–Ω–µ–¥–∂–µ—Ä–∞–º–∏: –æ—â—É—â–µ–Ω–∏–µ ¬´—è —Ç–∞–∫–æ–π –æ–¥–∏–Ω¬ª —É—Å–∏–ª–∏–≤–∞–µ—Ç –æ—Ç—á—É–∂–¥–µ–Ω–∏–µ'
    ]);
  }
  if(z.CF!=='green'){
    h+=rec('üí™ –£–∫—Ä–µ–ø–ª–µ–Ω–∏–µ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç–∏',[
      '–ó–∞–≤–µ–¥–∏—Ç–µ ¬´–¥–Ω–µ–≤–Ω–∏–∫ –ø–æ–±–µ–¥¬ª ‚Äî –∑–∞–ø–∏—Å—ã–≤–∞–π—Ç–µ 1‚Äì2 —É–ø—Ä–∞–≤–ª–µ–Ω—á–µ—Å–∫–∏—Ö —É—Å–ø–µ—Ö–∞ –∫–∞–∂–¥—ã–π –¥–µ–Ω—å',
      '–ó–∞–ø—Ä–æ—Å–∏—Ç–µ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—É—é –æ–±—Ä–∞—Ç–Ω—É—é —Å–≤—è–∑—å —É —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª—è: ¬´–ß—Ç–æ —É –º–µ–Ω—è –ø–æ–ª—É—á–∞–µ—Ç—Å—è —Ö–æ—Ä–æ—à–æ?¬ª',
      '–í—Å–ø–æ–º–Ω–∏—Ç–µ 3 —Å–ª–æ–∂–Ω—ã–µ —Å–∏—Ç—É–∞—Ü–∏–∏, –∫–æ—Ç–æ—Ä—ã–µ –≤—ã —É—Å–ø–µ—à–Ω–æ —Ä–∞–∑—Ä–µ—à–∏–ª–∏ –∑–∞ –ø–æ—Å–ª–µ–¥–Ω–∏–π –≥–æ–¥',
      '–ù–∞–π–¥–∏—Ç–µ –º–µ–Ω—Ç–æ—Ä–∞ –∏–ª–∏ peer-–≥—Ä—É–ø–ø—É ‚Äî –æ–±—Å—É–∂–¥–µ–Ω–∏–µ –∫–µ–π—Å–æ–≤ —Å–Ω–∏–∂–∞–µ—Ç —Å–∏–Ω–¥—Ä–æ–º —Å–∞–º–æ–∑–≤–∞–Ω—Ü–∞',
      '–ò–Ω–≤–µ—Å—Ç–∏—Ä—É–π—Ç–µ –≤ –æ–±—É—á–µ–Ω–∏–µ —Ç–æ–º—É –Ω–∞–≤—ã–∫—É, –≤ –∫–æ—Ç–æ—Ä–æ–º —á—É–≤—Å—Ç–≤—É–µ—Ç–µ –Ω–µ—É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å'
    ]);
  }

  h+=rec('üß≠ –û–±—â–∏–µ —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–∏ –¥–ª—è —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª—è',[
    '–†–µ–≥—É–ª—è—Ä–Ω—ã–µ 1-on-1 —Å –≤–∞—à–∏–º —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª–µ–º ‚Äî –Ω–µ —Ç–æ–ª—å–∫–æ –ø—Ä–æ –∑–∞–¥–∞—á–∏, –Ω–æ –∏ –ø—Ä–æ –≤–∞—à–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ',
    '–°—Ç—Ä–æ–π—Ç–µ –∫–æ–º–∞–Ω–¥—É, –∫–æ—Ç–æ—Ä–æ–π –º–æ–∂–Ω–æ –¥–æ–≤–µ—Ä—è—Ç—å: —ç—Ç–æ –ª—É—á—à–∞—è —Å—Ç—Ä–∞—Ö–æ–≤–∫–∞ –æ—Ç –ø–µ—Ä–µ–≥—Ä—É–∑–∫–∏',
    '–í—ã–¥–µ–ª—è–π—Ç–µ ¬´—Å—Ç—Ä–∞—Ç–µ–≥–∏—á–µ—Å–∫–æ–µ –≤—Ä–µ–º—è¬ª ‚Äî —Ö–æ—Ç—è –±—ã 2 —á–∞—Å–∞ –≤ –Ω–µ–¥–µ–ª—é –Ω–∞ –º—ã—à–ª–µ–Ω–∏–µ, –∞ –Ω–µ –Ω–∞ —Ä–µ–∞–∫—Ç–∏–≤–Ω—ã–µ –∑–∞–¥–∞—á–∏',
    '–ü–æ–º–Ω–∏—Ç–µ: –≤—ã–≥–æ—Ä–∞–Ω–∏–µ —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª—è = –≤—ã–≥–æ—Ä–∞–Ω–∏–µ –∫–æ–º–∞–Ω–¥—ã. –ó–∞–±–æ—Ç–∞ –æ —Å–µ–±–µ ‚Äî —ç—Ç–æ —É–ø—Ä–∞–≤–ª–µ–Ω—á–µ—Å–∫–∏–π –Ω–∞–≤—ã–∫',
    '–ü—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏ ‚Äî –∫–æ—Ä–ø–æ—Ä–∞—Ç–∏–≤–Ω—ã–π –ø—Å–∏—Ö–æ–ª–æ–≥, –∫–æ—É—á –∏–ª–∏ –ø—Ä–æ–≥—Ä–∞–º–º–∞ EAP'
  ]);

  box.innerHTML=h;
}

function rec(title,items){
  return `<div class="rec"><h4>${title}</h4><ul>${items.map(i=>'<li>'+i+'</li>').join('')}</ul></div>`;
}

/* =============================================================
   RESTART
   ============================================================= */
function restart(){
  document.getElementById('res').style.display='none';
  document.getElementById('quiz').style.display='block';
  document.querySelectorAll('input[type=radio]').forEach(r=>r.checked=false);
  document.querySelectorAll('.qc').forEach(c=>{c.classList.remove('done','miss')});
  document.getElementById('progTxt').textContent=`–û—Ç–≤–µ—á–µ–Ω–æ: 0 –∏–∑ ${TOTAL}`;
  document.getElementById('progFill').style.width='0%';
  window.scrollTo({top:0,behavior:'smooth'});
}
</script>
</body>
</html>
