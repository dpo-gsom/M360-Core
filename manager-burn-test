const TOTAL = QS.length; // 18
const MAX_SCALE = 30;    // 6 items √ó 5

/* ====== thresholds (per scale, out of 30) ====== */
function zone(s){return s>=24?'green':s>=16?'yellow':'red'}
const ZONE_LABEL = {green:'–†–µ—Å—É—Ä—Å–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ',yellow:'–ó–æ–Ω–∞ –≤–Ω–∏–º–∞–Ω–∏—è',red:'–ó–æ–Ω–∞ —Ä–∏—Å–∫–∞'};

/* =============================================================
   RENDER QUESTIONS
   ============================================================= */
(function(){
  const box=document.getElementById('qBox');
  QS.forEach((q,i)=>{
    let opts='';
    for(let v=1;v<=5;v++){
      opts+=`<div class="o"><input type="radio" name="q${q.id}" id="q${q.id}_${v}" value="${v}"
        onchange="mark(${q.id})"><label for="q${q.id}_${v}">${v}</label></div>`;
    }
    box.innerHTML+=`<div class="qc" id="c${q.id}">
      <div class="qc-top"><div class="qc-num">${i+1}</div><div class="qc-txt">${q.txt}</div></div>
      <div class="opts">${opts}</div></div>`;
  });
})();

/* =============================================================
   PROGRESS
   ============================================================= */
function answered(){return QS.filter(q=>document.querySelector(`input[name="q${q.id}"]:checked`)).length}
function mark(id){
  document.getElementById('c'+id).classList.add('done');
  document.getElementById('c'+id).classList.remove('miss');
  const n=answered();
  document.getElementById('progTxt').textContent=`–û—Ç–≤–µ—á–µ–Ω–æ: ${n} –∏–∑ ${TOTAL}`;
  document.getElementById('progFill').style.width=(n/TOTAL*100)+'%';
}

/* =============================================================
   SUBMIT & SCORING
   ============================================================= */
function submit(){
  const miss=[];
  QS.forEach(q=>{if(!document.querySelector(`input[name="q${q.id}"]:checked`)){
    miss.push(q.id);document.getElementById('c'+q.id).classList.add('miss');
  }});
  if(miss.length){document.getElementById('c'+miss[0]).scrollIntoView({behavior:'smooth',block:'center'});return}

  const sc={EN:0,EG:0,CF:0};
  QS.forEach(q=>{
    let v=+document.querySelector(`input[name="q${q.id}"]:checked`).value;
    sc[q.sc]+= q.rev ? (6-v) : v;
  });
  showResults(sc);
}

/* =============================================================
   RESULTS
   ============================================================= */
